<%= form_for(@pin) do |f| %>
   <form class="col s6">
      <div class="row">
        <div class="input-field col s3">
          <%= f.text_field :comment %>
          <label for="comment">Echo</label>
        </div>
      </div>
    <div class="input-field col s3">
      <div class="input-field col s8">
      <%= f.submit :class => "btn waves-effect waves-light" %>
      </div>
    </div>
  </form>
<% end %>
