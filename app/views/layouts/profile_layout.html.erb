<!DOCTYPE html>
<html>
<head>
  <title>Echo</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js" type="text/javascript"></script>
</head>

<body>
  <div class="row profile-head">
    <div class="col s12">
      <div class="col s3">
        <%= image_tag @user.avatar.url, :class => 'rounded' %>
      </div>
      <div class="col s7">
      <h4 id="light-header"><%= @user.fullname %></h4>
      <h6><b>Username:</b> <%= @user.username %></h6>
      <h6><b>Location: </b><%= @user.location %></h6>
      <h6 class='since'>Signed Up: <%= @user.created_at.strftime("%b. %d, %Y") %></h6>
      <% if @user == current_user %>
      <%=link_to "Account Settings", edit_user_path(current_user), :class => 'since center-align'%>
      <% end %>
      </div>

      <div class="col s2"><%= link_to image_tag('logo.png', size: "100x60", :class => 'profile-logo'), maps_path%>
      <%= button_to('Logout', logout_path, :class => 'profile-logout btn waves-effect waves-light green lighten-1', :method => :get)  %>

      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <ul>
        <li class="col s4 center-align"><%= link_to 'Your Profile', user_path(current_user) %></li>
        <li class="col s4 center-align"><%= link_to 'Map', maps_path %></li>
        <li class="col s4 center-align"><%= link_to 'Friends', friends_path %></li>
      </ul>
    </div>
  </div>

<%= yield %>

</body>
</html>
